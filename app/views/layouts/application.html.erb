<!DOCTYPE html>
<html>
  <head>
    <title>Melp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link href="https://fonts.googleapis.com/css?family=IBM+Plex+Mono" rel="stylesheet">
    <%if logged_in?%>
    <script type="text/javascript">
      window.currentUser = <%= render('/api/users/user.json.jbuilder',
                                user: current_user).html_safe%>
    </script>
    <%end%>
    <script type="text/javascript">
    window.chinaURL = "<%= image_url('cuisine-china.jpg') %>"
    window.koreaURL = "<%= image_url('cuisine-korea.jpg') %>"
    window.japanURL = "<%= image_url('cuisine-japan.jpg') %>"
    window.indiaURL = "<%= image_url('cuisine-india.jpg') %>"
    window.footerURL = "<%= image_url('footer-image.png') %>"
    window.logoURL = "<%= image_url('logo.png') %>"
    window.signFormURL = "<%= image_url('sign-form.png') %>"
    window.welcomeURL = "<%= image_url('welcome-img.jpg') %>"
    window.smallLogoURL = "<%= image_url('small_logo.png') %>"
    window.starInputURL = "<%= image_url('star_input.png') %>"
    window.starOutputURL = "<%= image_url('star_output.png') %>"
    </script>
    <%= favicon_link_tag asset_path('favicon.png') %>
    <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=#{Rails.application.credentials.google[:api_key]}" %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
